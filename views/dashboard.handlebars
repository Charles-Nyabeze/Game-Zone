<div class="container">
  <div class="row">
    <section class="col">
      <h2>Create New Post</h2>

      <form class="new-post-form" method="POST" action="/dashboard" enctype="multipart/form-data">
        <div>
          <label for="post-title">Title</label>
          <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
          <label for="post-url">Link</label>
          <input id="post-url" name="post-url" />
        </div>
        {{!-- <div>
          <label>Upload Picture</label>
          <img src="{{img_url}}" id="img-preview" />
          <input type="file" accept="image/*" onchange="loadFile(event)" name="profile-file" id="choose-file"
            Required />

        </div> --}}
        <button type="submit" class="btn">Create</button>
      </form>

    </section>

    <section class="col">
      {{#if posts.length}}
      <section>
        <h2>Your Posts</h2>
        <ol>
          {{#each posts as |post|}}
          <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
          </li>
          {{/each}}
        </ol>
      </section>
      {{/if}}
    </section>
  </div>
</div>


<script src="/javascript/add-post.js"></script>
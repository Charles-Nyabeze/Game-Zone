<div class=" post-details row">
    <div class="col-6 text-center">
        <div class="details-title">{{title}}</div>
        <a href="{{post_url}}" class="details-text" target="_blank">{{format_url post_url}}</a>
        <p class="details-author text-center">by <span class="details-user">{{user.username}}</span> on {{format_date created_at}}
        </p>
        <div class="d-flex flex-row justify-content-between mt-auto">
            <div>
                {{vote_count}} {{format_plural "point" vote_count}}
                |</div>
            <div>
                <div>{{comments.length}} {{format_plural "comment" comments.length}}</div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <img class="display-img" src="{{img_url}}" />
    </div>
</div>